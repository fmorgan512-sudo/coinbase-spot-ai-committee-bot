# ---- Storage
DB_PATH=/data/bot.sqlite3

# ---- Mode
DRY_RUN=true

# ---- Coinbase (CDP) JWT auth inputs
COINBASE_API_KEY_NAME=organizations/.../apiKeys/...
COINBASE_API_PRIVATE_KEY_PEM="-----BEGIN EC PRIVATE KEY-----\n...\n-----END EC PRIVATE KEY-----"

# ---- Trading config
QUOTE_CURRENCY=USD
POLL_SECONDS=30
AI_MIN_SECONDS_BETWEEN=1800
PNL_DELTA_TRIGGER_PCT=0.5
VOLATILITY_TRIGGER_PCT=1.0
MAX_DAILY_LOSS_PCT=2.0
MAX_POSITION_PCT=10.0
MAX_TRADES_PER_HOUR=6

# ---- LLM keys (API, not consumer subscriptions)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-7-sonnet-latest
